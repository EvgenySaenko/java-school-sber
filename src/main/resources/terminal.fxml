<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: limegreen;" xmlns="http://javafx.com/javafx/8.0.281" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.sber.javaschool.homeworks.homework4.GUI.TerminalController">
    <children>
        <AnchorPane prefHeight="89.0" prefWidth="600.0" style="-fx-background-color: black;">
            <children>
                <Label layoutX="150.0" layoutY="10.0" text="TERMINAL" textFill="#14f520">
                    <font>
                        <Font name="Sitka Small Bold" size="56.0" />
                    </font>
                </Label>
            </children></AnchorPane>
      <HBox alignment="BASELINE_LEFT" layoutY="335.0" prefHeight="65.0" prefWidth="600.0">
         <children>
              <Button fx:id="showCash" mnemonicParsing="false" onAction="#showCash" prefHeight="48.0" prefWidth="144.0" style="-fx-background-color: black;" text="Баланс" textFill="#00ff09">
                  <font>
                      <Font size="21.0" />
                  </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
              </Button>

              <Button fx:id="putCash" mnemonicParsing="false" onAction="#putCash" prefHeight="48.0" prefWidth="144.0" style="-fx-background-color: black;" text="Положить" textFill="#00ff09">
                  <font>
                      <Font size="21.0" />
                  </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
              </Button>

              <Button fx:id="getCash" mnemonicParsing="false" onAction="#getCash" prefHeight="48.0" prefWidth="144.0" style="-fx-background-color: black;" text="Снять" textFill="#00ff09">
                  <font>
                      <Font size="21.0" />
                  </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
              </Button>

             <Button fx:id="exit" mnemonicParsing="false" onAction="#btnExit" prefHeight="48.0" prefWidth="144.0" style="-fx-background-color: black;" text="Выйти" textFill="#00ff09">
                 <font>
                     <Font size="21.0" />
                 </font>
                 <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                 </HBox.margin>
             </Button>

         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      
      <Label layoutX="34.0" layoutY="150.0" prefHeight="45.0" prefWidth="305.0" text="Средств на счете:">
         <font>
            <Font name="Franklin Gothic Demi" size="24.0" />
         </font>
      </Label>
      <TextArea fx:id="textArea" layoutX="246.0" layoutY="142.0" prefHeight="65.0" prefWidth="291.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextArea>
      <TextField fx:id="tfPut" layoutX="158.0" layoutY="304.0" onAction="#tfPutCash" prefHeight="31.0" prefWidth="130.0" promptText=" введите сумму" />
      <TextField fx:id="tfGet" layoutX="309.0" layoutY="304.0" onAction="#tfGetCash" prefHeight="31.0" prefWidth="130.0" promptText="введите сумму" />
      <Label fx:id="labelTerminal" layoutX="111.0" layoutY="247.0" text="" textFill="RED">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
      
    </children>
</AnchorPane>
